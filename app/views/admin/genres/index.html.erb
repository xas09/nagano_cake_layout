<p>ジャンル一覧・追加</p>
<%= form_with model:@newgenre, url:'/admin/genres', local:true do |f| %>
<div>
  <label>ジャンル名</label>
  <%= f.text_field :name %>
  <%= f.submit "新規登録", class:"btn btn-sm btn-success" %>
</div>
<% end %>
<div>
  <table class="">
    <thead>
      <tr>
        <td>ジャンル</td>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-sm btn-success" %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
