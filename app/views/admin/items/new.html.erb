<p>商品新規登録</p>
<%= form_with model:@newitem, url:admin_items_path, local:true do |f| %>
<div>
    <label>商品画像</label>
    <%= f.attachment_field :image %>
</div>
<div>
    <label>商品名</label>
    <%= f.text_field :name %>
</div>
<div>
    <label>商品説明</label>
    <%= f.text_area :introduction %>
</div>
<div>
    <label>ジャンル</label>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
</div>
<div>
    <label>税抜価格</label>
    <%= f.text_field :price_without_tax %>
</div>
<div>
    <label>販売ステータス</label>
    <label><%= f.radio_button :is_unavailable, "FALSE" %>販売中</label>
    <label><%= f.radio_button :is_unavailable, "TRUE" %>販売停止中</label>
</div>
<div>
    <%= f.submit "新規登録", class:"btn btn-sm btn-success" %>
</div>
<% end %>
