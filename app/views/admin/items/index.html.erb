<p>商品一覧</p>
<%= link_to "商品新規登録", new_admin_item_path %>
<div>
    <table class="">
        <thead>
            <tr>
                <td>商品ID</td>
                <td>商品名</td>
                <td>税抜価格</td>
                <td>ジャンル</td>
                <td>ステータス</td>
            </tr>
        </thead>
        <tbody>
            <% @items.each do |item| %>
            <tr>
                <td><%= item.id %></td>
                <td><%= item.name %></td>
                <td><%= item.price_without_tax %></td>
                <td><%= item.genre.name %></td>
                <% if item.is_unavailable == false %>
                <td>販売中</td>
                <% else %>
                <td>販売停止中</td>
                <% end %>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
