<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="vsc-initialized">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
          <%= link_to "LOGO", admin_root_path %>
          <div>
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
              <li>
                <%= link_to "商品一覧", admin_items_path %>
              </li>
              <li>
                <%= link_to "会員一覧", admin_end_users_path %>
              </li>
              <li>
                <%= link_to "注文履歴一覧", admin_root_path %></li>
              <li>
                <%= link_to "ジャンル一覧", admin_genres_path %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
              </li>
              <% else %>
              <li>商品一覧</li>
              <li>
                <%= link_to "新規登録", new_end_user_registration_path %>
              </li>
              <li>
                <%= link_to "ログイン", new_end_user_session_path %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
        <div>
        <%= form_with url:admin_items_path, method: :get, local:true do |f| %>
          <%= f.text_field :search %>
          <%= f.submit "検索" %>
        <% end %>
        </div>
      </nav>
    </header>
    <main>
      <div class="container">
        <div class="row">
          <div class="mx-auto">
    <%= yield %>
          </div>
        </div>
      </div>
    </main>
    <footer>
    </footer>
  </body>
</html>