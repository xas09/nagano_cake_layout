<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body class="vsc-initialized">
    <header class="border-bottom border-dark">
      <div class="container">
        <nav class="navbar-expand-lg">
          <!--navbar navbar-expand-lg-->
          <div class="row">
            <div class="col">
              <%= link_to "LOGO", admin_root_path %>
            </div>
            <div class="col-8">
              <div class="row">
                <ul class="navbar-nav ml-auto my-2">
                <% if admin_signed_in? %>
                  <li class="nav-item mx-3">
                    <%= link_to "商品一覧", admin_items_path, class:"btn btn-outline-secondary" %>
                  </li>
                  <li class="nav-item mx-3">
                    <%= link_to "会員一覧", admin_end_users_path, class:"btn btn-outline-secondary" %>
                  </li>
                  <li class="nav-item mx-3">
                    <%= link_to "注文履歴一覧", admin_root_path, class:"btn btn-outline-secondary" %></li>
                  <li class="nav-item mx-3">
                    <%= link_to "ジャンル一覧", admin_genres_path, class:"btn btn-outline-secondary" %>
                  </li>
                  <li class="nav-item mx-3">
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"btn btn-outline-secondary" %>
                  </li>
                <% else %>
                  <li class="nav-item mx-3">商品一覧</li>
                  <li class="nav-item mx-3">
                    <%= link_to "新規登録", new_end_user_registration_path, class:"btn btn-outline-secondary" %>
                  </li>
                  <li class="nav-item mx-3">
                    <%= link_to "ログイン", new_end_user_session_path, class:"btn btn-outline-secondary" %>
                  </li>
                <% end %>
                </ul>
              </div>
              <div class="row">
                <div class="navbar-nav ml-auto my-3">
                  <%= form_with url:admin_items_path, method: :get, local:true, class:"form-inline" do |f| %>
                  <%= f.text_field :search, class:"form-control mr-sm-2" %>
                  <%= f.submit "検索", class:"btn btn-outline-success my-2 my-sm-0" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </nav>
      </div>
    </header>
    <main>
      <div class="container">
        <div class="row">
          <!--<div class="mx-auto">-->
    <%= yield %>
          <!--</div>-->
        </div>
      </div>
    </main>
    <footer>
    </footer>
  </body>
</html>