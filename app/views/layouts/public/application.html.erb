<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="vsc-initialized">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
          <%= link_to "LOGO", root_path %>
          <div>
            <ul class="navbar-nav ml-auto">
              <% if end_user_signed_in? %>
              <li>
                <%= link_to "マイページ", end_users_mypage_path %>
              </li>
              <li>
                <%= link_to "商品一覧", items_path %>
              </li>
              <li>
                <%= link_to "カート", cart_items_path %></li>
              <li>
                <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %>
              </li>
              <% else %>
              <li><%= link_to "商品一覧", items_path %></li>
              <li>
                <%= link_to "新規登録", new_end_user_registration_path %>
              </li>
              <li>
                <%= link_to "ログイン", new_end_user_session_path %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <div class="container">
        <div class="row">
          <div class="mx-auto">
    <%= yield %>
          </div>
        </div>
      </div>
    </main>
    <footer>
    </footer>
  </body>
</html>
