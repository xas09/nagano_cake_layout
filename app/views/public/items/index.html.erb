<p>商品一覧（全<%= @items.count %>件）</p>
<% @items.each do |item| %>
<div>
    <div>
        <div>
            <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, :fill, 100, 100 %> 
            <% end %>
        </div>
        <div>
            <%= link_to item.name, item_path(item) %>
        </div>
        <div>
            ¥<%= 1.1*item.price_without_tax %>
        </div>
    </div>
</div>
<% end %>
