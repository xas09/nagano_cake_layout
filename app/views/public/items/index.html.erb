    <div class="col-lg-3 col-xs-3">
      <table class="table">
         <tr>
            <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |genre| %>
            <tr>
                <td><%= link_to genre.name, items_path(search: genre.id ) %></td>
            </tr>
        <% end %>
        </table>
    </div>
    
    <div class="col-lg-8 col-xs-9 offset-md-1">
        <p>商品一覧（全<%= @items.count %>件）</p>
        <% @items.each do |item| %>
        <div>
            <div>
                <div>
                    <%= link_to item_path(item) do %>
                    <%= attachment_image_tag item, :image, :fill, 100, 100 %> 
                    <% end %>
                </div>
                <div>
                    <%= link_to item.name, item_path(item) %>
                </div>
                <div>
                    ¥<%= 1.1*item.price_without_tax %>
                </div>
            </div>
        </div>
        <% end %>
    </div>