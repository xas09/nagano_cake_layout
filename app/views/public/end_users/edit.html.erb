<%if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this user from being saved:
    <% @user.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
<% end %>
<p>会員情報編集</p>
<%= form_with model:@user, url:'/end_users/mypage', local:true do |f| %>
<div>
    <label>氏名</label>
    <%= f.text_field :first_name %><%= f.text_field :last_name %>
</div>
<div>
    <label>フリガナ</label>
    <%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %>
</div>
<div>
    <label>郵便番号</label>
    <%= f.text_field :zip_code %>
</div>
<div>
    <label>住所</label>
    <%= f.text_field :address %>
</div>
<div>
    <label>電話番号</label>
    <%= f.text_field :phone_number %>
</div>
<div>
    <label>メールアドレス</label>
    <%= f.text_field :email %>
</div>
<div>
    <%= f.submit "編集内容を保存" %>
</div>
<% end %>
<%= link_to "退会する", end_users_mypage_confirm_path, class:"btn btn-sm btn-danger" %>
