<div class="container">
<%if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this user from being saved:
    <% @user.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
<% end %>
 <div class="row mt-2">
    <div class="d-inline bg-light ml-5 my-3 px-2"><h3 class="text-justify">会員情報編集</h3></div>
 </div>
 
<%= form_with model:@user, url:end_users_mypage_path, local:true do |f| %>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">氏名</label>
    <div class="col-sm-2"><%= f.text_field :first_name, class:"form-control" %></div>
    <div class="col-sm-2"><%= f.text_field :last_name, class:"form-control" %></div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">フリガナ</label>
    <div class="col-sm-2"><%= f.text_field :first_name_kana, class:"form-control" %></div>
    <div class="col-sm-2"><%= f.text_field :last_name_kana, class:"form-control" %></div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">郵便番号</label>
    <div class="col-sm-3"><%= f.text_field :zip_code, class:"form-control" %></div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">住所</label>
    <div class="col-sm-8"><%= f.text_field :address, class:"form-control" %></div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">電話番号</label>
    <div class="col-sm-3"><%= f.text_field :phone_number, class:"form-control" %></div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">メールアドレス</label>
    <div class="col-sm-3"><%= f.text_field :email, class:"form-control" %></div>
</div>
<div class="form-group row">
    <!--<div class="col-sm-2"></div>-->
    <div class="col-sm-3 offset-sm-2"><%= f.submit "編集内容を保存", class:"btn btn-success" %></div>
    <div class="col-sm-2 offset-sm-1"><%= link_to "退会する", end_users_mypage_confirm_path, class:"btn btn-danger" %></div>
</div>
<% end %>

</div>