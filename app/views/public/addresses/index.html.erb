<%= form_with model:@address, url:addresses_path, local:true do |f| %>
   <div>
       <label>郵便番号</label><%= f.text_field :zip_code %></div>
   <div>
       <label>住所</label><%= f.text_field :address %></div>
   <div>
       <label>名前</label><%= f.text_field :name %></div>
   <div>
       <%= f.submit "作成" %>
   </div>
<% end %>

<table class="table">
    <tr>
        <th>
            住所一覧
        </th>
    </tr>

 <% @addresses.each do |address| %>
    <tr>
      <td><%= address.zip_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
    </tr> 
<% end %>
</table>    